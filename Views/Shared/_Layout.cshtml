<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Afro Belle</title>
    <link rel="icon" type="image/png" href="~/favicon.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/AB.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    


</head>

<body>
    <!-- Announcement Section -->
    <div class="announcement-bar text-center py-2 bg-primary text-white">
        <span>✨ Free shipping on orders over R1000! ✨</span>
    </div>

    <!-- Sticky Navbar -->
    <header class="ab-header sticky-top">
        <!-- Main Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid d-flex align-items-center justify-content-between">
                <!-- Left: Logo and Links -->
                <div class="d-flex align-items-center">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/images/logo small.png" alt="Afro Belle Logo" height="60" />
                    </a>
                    <ul class="navbar-nav ms-3">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">Products</a>
                        </li>
                    </ul>
                </div>

                <!-- Center: Afro Belle Heading -->
                <a class="nav-link d-none d-sm-block" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="navbar-text mx-auto text-black fw-bold fs-2">
                        AFROBELLE
                    </span></i>
                    
                </a>

                <!-- Right: Icons -->
                <div class="d-flex align-items-end px-2">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house-fill text-primary"></i>
                    </a>
                    <a class="nav-link" asp-area="" asp-controller="Product" asp-action="Search">
                        <i class="bi bi-search text-primary"></i>
                    </a>
                    <!-- Cart Icon with Tooltip and Item Count -->
                    <div class="position-relative d-inline-block">
                        <!-- Cart Icon -->
                        <a class="nav-link position-relative" asp-area="" asp-controller="Cart" asp-action="Index" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Items in cart">
                            <i class="bi bi-cart-fill text-primary" style="font-size: 1rem;"></i>
                        </a>
                        <!-- Cart Item Count Badge -->
                        <span class="position-absolute top-0 start-50 translate-middle badge rounded-pill bg-danger">
                            @ViewBag.CartTotalQuantity
                        </span>
                    </div>
                    <div class="dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle text-primary"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Login">Login</a></li>
                            <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Secondary Navbar -->
        <nav class="secondary-navbar bg-body text-white border-bottom box-shadow">
            <div class="container-fluid">
                <ul class="nav justify-content-center">
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Home#newarrivals-section">New Arrivals</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Home#bonnets-section">Bonnets</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Home#scrunchies-section">Scrunchies</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/Home#pillowcases-section">Pillowcases</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    @* @if (ViewData["NoContainer"] == null)
    { *@
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    @* }
    else
    {
        @RenderBody()
    } *@


    <div class="lead mb-4 text-center sticky-icon">
        <a href="https://wa.me/0738949483" class="whatsapp-link" target="_blank">
            <img src="https://upload.wikimedia.org/wikipedia/commons/6/6b/WhatsApp.svg"
                 alt="WhatsApp" style="width: 30px; height: 30px; vertical-align: middle;">
        </a>
    </div>

     <footer class="footer border-top footer mt-5 bg-dark text-white py-4 ">
        
        <div class="container d-flex justify-content-between gap-3">
            <!-- Quick Links -->
            <div class="footer-section">
                <h5 class="mb-3">Quick Links</h5>
                <ul class="list-unstyled">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index" class="text-decoration-none text-white-50">Home</a></li>
                    <li><a asp-area="" asp-controller="Product" asp-action="Index" class="text-decoration-none text-white-50">Products</a></li>
                    <li><a asp-area="" asp-controller="About" asp-action="Index" class="text-decoration-none text-white-50">About</a></li>
                    <li><a asp-area="" asp-controller="Contact" asp-action="Index" class="text-decoration-none text-white-50">Contact</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="FAQs" class="text-decoration-none text-white-50">FAQs</a></li>
                </ul>
            </div>

            <!-- Contact Links -->
            <div class="footer-section">
                <h5 class="mb-3">Contact Us</h5>
                <p class="mb-2">
                    <i class="bi bi-envelope-fill"></i>
                    <a href="mailto:info@afrobelle.com" class="text-decoration-none text-white-50">info@afrobelle.com</a>
                </p>
                <p class="mb-2">
                    <i class="bi bi-telephone-fill"></i>
                    <a href="tel:+1234567890" class="text-decoration-none text-white-50">+1 234 567 890</a>
                </p>
                <p class="mb-0">
                    <i class="bi bi-geo-alt-fill"></i>
                    123 Afro Belle Street, <br />  City, Country
                </p>
            </div>
        </div>


        </div>
        <hr />
        <div class="medialinks d-flex flex-column align-items-center text-center">
            <div class="footer-section col-md-6">
                <h4 class="social">Follow Us</h4>
                <a href="https://wa.me/your_number" target="_blank" class="text-white mx-2">
                    <i class="bi bi-whatsapp" style="font-size: 1rem;"></i>
                </a>
                <a href="https://www.tiktok.com/" target="_blank" class="text-white mx-2">
                    <i class="bi bi-tiktok" style="font-size: 1rem;"></i>
                </a>
                <a href="https://www.instagram.com/your_username" target="_blank" class="text-white mx-2">
                    <i class="bi bi-instagram" style="font-size: 1rem;"></i>
                </a>
                <a href="https://www.facebook.com/your_username" target="_blank" class="text-white mx-2">
                    <i class="bi bi-facebook" style="font-size: 1rem;"></i>
                </a>
            </div>
            <br />

            <div class="footer-content">
                <!-- Copyright -->
                <div class="footer-section">
                    <p>&copy; 2024 BMCodes. All Rights Reserved.</p>
                </div>
            </div>
        </div>

        <br />
    </footer>
    
    <script src="https://www.paypal.com/sdk/js?client-id=ATr0Zckn8Ctk-lfpdLgMLoud6qA9K9-fI8M5QwrH9n0yrlGtA7L14qpeJ8PRD7kX5BxyOM8K7bSgtSgT&currency=ZAR"></script>
    <script type="text/javascript" src="https://cdn.emailjs.com/dist/email.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
