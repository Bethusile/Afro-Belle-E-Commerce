@{
    ViewData["Title"] = "Home Page";
}

<section id="newarrivals-section" class="py-5">
    
    <h2 class="text-center mb-4">New Arrivals</h2>
    <hr>
    <div class="row align-items-center justify-content-center">
        <!-- Left: Carousel for New Arrivals -->
        <div class="col-md-6 d-flex  justify-content-center">
            <div id="newArrivalsCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @foreach (var product in ViewBag.NewArrivals)
                    {
                        <div class="carousel-item @(ViewBag.NewArrivals.IndexOf(product) == 0 ? "active" : "")">
                            <div class="card product-card h-100">
                                <a asp-area="" asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">
                                    <img src="~/images/@product.ImageUrl" alt="@product.Name" class="card-img-top product-image" />
                                </a>
                                <div class="card-body d-flex flex-column">
                                    <!-- Product Title -->
                                    <h5 class="card-title text-center mb-2">
                                        @product.Name
                                    </h5>

                                    <!-- Product Description -->
                                    <p class="card-text text-center text-truncate" title="@product.Description">
                                        @product.Description
                                    </p>

                                    <!-- Product Price -->
                                    <p class="text-center fw-bold text-primary">
                                        R @product.Price
                                    </p>

                                    <!-- Stock Availability -->
                                    <p class="text-center">
                                        @if (product.prodQuantity > 0)
                                        {
                                            <span class="badge bg-success">In Stock</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Out of Stock</span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Carousel Controls -->
                <button class="carousel-control-prev " type="button" data-bs-target="#newArrivalsCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon " aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#newArrivalsCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <br /><br /><br />
        <!-- Right: Video Section -->
        <div class="col-md-6 d-flex justify-content-center">
            <div class="ratio ratio-16x9">
                <iframe width="560" height="315"
                        src="https://www.youtube.com/embed/kwFuk7BrMrs?si=wzSqYar3pHciKo0w"
                        title="YouTube video player"
                        frameborder="0"
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                        referrerpolicy="strict-origin-when-cross-origin"
                        allowfullscreen>
                </iframe>
            </div>
        </div>
    </div>
</section>

<br /><br /><br /><br /><br />

